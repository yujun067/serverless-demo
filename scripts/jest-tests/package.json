{
  "name": "bitcoin-game-e2e-tests",
  "version": "1.0.0",
  "description": "End-to-end tests for Bitcoin Price Prediction Game using Jest",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest --testPathPattern=api-validation",
    "test:business": "jest --testPathPattern=business-logic",
    "test:errors": "jest --testPathPattern=error-handling",
    "test:realtime": "jest --testPathPattern=realtime",
    "test:performance": "jest --testPathPattern=performance"
  },
  "keywords": [
    "jest",
    "e2e",
    "api",
    "testing",
    "bitcoin",
    "serverless"
  ],
  "author": "Bitcoin Game Team",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5"
  },
  "dependencies": {
    "axios": "^1.5.0",
    "jsonwebtoken": "^9.0.2",
    "eventsource": "^2.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/test-setup.js"
    ],
    "testTimeout": 30000,
    "collectCoverageFrom": [
      "**/*.test.js",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/*.test.js"
    ],
    "verbose": true,
    "reporters": [
      "default"
    ]
  }
}
